# AI Provider Configuration
# You can use OpenAI, Groq, or both with automatic fallback

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Groq Configuration (Fast and Free!)
# Get your free API key at: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# AI Provider Preference
# Options: 'auto' (tries Groq first, then OpenAI), 'groq', or 'openai'
AI_PROVIDER=auto

# Flask Configuration
SECRET_KEY=your_secret_key_here
FLASK_DEBUG=False

# Chat Configuration
MAX_CONVERSATION_HISTORY=10
SYSTEM_MESSAGE=You are a helpful, friendly, and knowledgeable AI assistant.